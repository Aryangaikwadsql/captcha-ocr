{
  "manifest_version": 3,
  "name": "CAPTCHA Crop & OCR",
  "version": "0.1.0",
  "description": "Select any on-page area (e.g., a CAPTCHA) and extract text via OCR.",
  "action": {
    "default_title": "CAPTCHA OCR",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["https://api.ocr.space/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
